{
  "name": "mcp-financex",
  "version": "1.0.11",
  "description": "MCP server for real-time stock and cryptocurrency analysis using Yahoo Finance",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-financex": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "finance",
    "stocks",
    "crypto",
    "cryptocurrency",
    "yahoo-finance",
    "technical-indicators",
    "options",
    "options-trading",
    "greeks",
    "black-scholes"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xerktech/mcp-financex.git"
  },
  "homepage": "https://github.com/xerktech/mcp-financex#readme",
  "bugs": {
    "url": "https://github.com/xerktech/mcp-financex/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "black-scholes": "^1.1.0",
    "dotenv": "^16.4.7",
    "fast-xml-parser": "^4.3.5",
    "mathjs": "^13.2.2",
    "node-cache": "^5.1.2",
    "p-throttle": "^6.1.0",
    "technicalindicators": "^3.1.0",
    "yahoo-finance2": "^3.11.2",
    "zod": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-cache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
